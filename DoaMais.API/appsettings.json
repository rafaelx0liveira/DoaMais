{
  "KeyVault": {
    "MountPoint": "secret",
    "BasePath": "doamais",
    "Address": "http://localhost:8200/",
    "Token": "*"
  },
  "KeyVaultSecrets": {
    "RabbitMQ": {
      "HostName": "rabbitmq_hostName",
      "Password": "rabbitmq_password",
      "UserName": "rabbitmq_userName",
      "DonationQueue": "DonationQueueName",
      "DonationRoutingKey": "DonationRoutingKey",
      "DonorNotificationExchange": "DonorNotificationExchangeName",
      "DonorNotificationQueue": "DonorNotificationQueueName",
      "DonorNotificationRoutingKey": "DonorNotificationRoutingKey",
      "HospitalNotificationExchange": "HospitalNotificationExchangeName",
      "HospitalNotificationQueue": "HospitalNotificationQueueName",
      "HospitalNotificationRoutingKey": "HospitalNotificationRoutingKey",
      "LowStockAlertExchange": "LowStockAlertExchangeName",
      "LowStockAlertQueue": "LowStockAlertQueueName",
      "LowStockRoutingKey": "LowStockRoutingKeyName",
      "StockEventsExchange": "StockEventsExchangeName",
      "TransfusionQueue": "TransfusionQueueName",
      "TransfusionRoutingKey": "TransfusionRoutingKey"
    },
    "JwtSecret": "jwt_secret",
    "Database": {
      "ConnectionString": "connectionStrings"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api_log.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
